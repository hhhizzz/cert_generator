{
  "name": "cert-generator",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "homepage": "./",
  "description": "一个简单易用的证书生成工具",
  "author": "Certificate Generator Team",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^3.0.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "npm run build && cp electron.js build/electron.js && electron build/",
    "electron-dev": "npm run build && cp electron.js build/electron.js && electron build/",
    "electron-prod": "NODE_ENV=production npm run build && cp electron.js build/electron.js && electron build/",
    "dev-server": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && cp electron.js build/electron.js && electron-builder",
    "build-electron": "npm run build && cp electron.js build/electron.js && npx electron-builder --win",
    "build-all": "npm run build && cp electron.js build/electron.js && npx electron-builder",
    "dist": "npm run build && cp electron.js build/electron.js && npx electron-builder --publish=never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "url-loader": "^4.1.1",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.certgenerator.app",
    "productName": "证书生成器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron.js",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": "AppImage",
      "category": "Productivity"
    }
  }
}
